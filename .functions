
#add my ssh public key to the specified user@host for auto ssh login
function add-key {
        cat ~/.ssh/id_rsa.pub | ssh ${1} "mkdir -p ~/.ssh && chmod 700 ~/.ssh && cat >> ~/.ssh/authorized_keys && chmod 600 ~/.ssh/authorized_keys"
}

